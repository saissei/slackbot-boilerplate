{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "public", "views"],
  "compileOnSave": false
}
