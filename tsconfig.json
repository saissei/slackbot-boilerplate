{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "*.test.ts", "**.js"],
  "compileOnSave": false
}
